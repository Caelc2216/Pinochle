<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pinochle_Scoring_App.MainPage"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Title -->
            <Label Text="Pinochle Scoring" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#193829"
                   Margin="0,10,0,10"/>

            <!-- Game Setup Card -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Game Setup" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#193829"/>
                    <Label Text="Players: 4 (2 teams)" FontSize="14"/>
                    <Label Text="Deck: 48 cards (9–A, two of each suit)" FontSize="14"/>
                    <Label Text="Rank: A 10 K Q J 9" FontSize="14"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Deal and Bid Card -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="1. Deal and Bid" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#193829"/>
                    <Label Text="• Deal 12 cards each" FontSize="14"/>
                    <Label Text="• Starting left of dealer, bid or pass" FontSize="14"/>
                    <Label Text="• Highest bid wins, sets trump, leads first" FontSize="14"/>
                    <Label Text="• Bid = minimum points to make" FontSize="14"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Meld Card -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="2. Meld" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#193829"/>
                    <Label Text="• All players show meld" FontSize="14"/>
                    <Label Text="• Score immediately; cards stay in hand" FontSize="14"/>
                    <Label Text="Common Melds:" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           Margin="0,10,0,5"/>
                    <Label Text="• Run (A-10-K-Q-J trump) = 15" FontSize="14"/>
                    <Label Text="• Marriage (K+Q) = 2 (trump = 4)" FontSize="14"/>
                    <Label Text="• Pinochle (Q♠ J♦) = 4" FontSize="14"/>
                    <Label Text="• Aces/Kings/Queens/Jacks around = 10/8/6/4" FontSize="14"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Play Tricks Card -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="3. Play Tricks" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#193829"/>
                    <Label Text="• Must follow suit" FontSize="14"/>
                    <Label Text="• If not, play trump" FontSize="14"/>
                    <Label Text="• Must win if able" FontSize="14"/>
                    <Label Text="• Trick winner leads next" FontSize="14"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Score Card -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="4. Score" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#193829"/>
                    <Label Text="Trick points: A=1, K=1, 10=1, last trick=1 (25 total)" 
                           FontSize="14"
                           Margin="0,0,0,10"/>
                    <Label Text="Bidding team:" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                    <Label Text="• Makes bid → scores all points" FontSize="14"/>
                    <Label Text="• Fails bid → loses bid amount" FontSize="14"/>
                    <Label Text="First team to 150 wins" 
                           FontSize="14"
                           FontAttributes="Bold"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Start Button -->
            <Button Text="Start New Game" 
                    Clicked="OnStartNewGameButtonClicked"
                    BackgroundColor="#193829"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"
                    Margin="0,10,0,20"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
