<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pinochle_Scoring_App.WinnerPage"
             Title="WinnerPage">
    <VerticalStackLayout>
        <Label 
            Text="Congratulations!"
            FontSize="Large"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Margin="0,20,0,0"/>
        <Label
            Text="{Binding Name}"
            FontSize="Medium"
            HorizontalOptions="Center"
            Margin="0,10,0,0"/>
        <Button Text="Start New Game" 
                Clicked="OnStartNewGameButtonClicked"
                Margin="0,30,0,0"/>
    </VerticalStackLayout>
</ContentPage>