<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pinochle_Scoring_App.WinnerPage"
             Title="WinnerPage"
             BackgroundColor="#F5F5F5">
    
    <VerticalStackLayout Padding="20" Spacing="30" VerticalOptions="Center">
        
        <!-- Winner Card -->
        <Frame BackgroundColor="White"
               CornerRadius="10"
               Padding="40"
               HasShadow="True"
               HorizontalOptions="Center">
            <VerticalStackLayout Spacing="20">
                <Label Text="ðŸ†"
                       FontSize="60"
                       HorizontalOptions="Center"/>
                
                <Label Text="Congratulations!"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="#193829"
                       HorizontalOptions="Center"/>
                
                <Label Text="{Binding Name}"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#28a745"
                       HorizontalOptions="Center"/>
                
                <Label Text="Winner!"
                       FontSize="20"
                       TextColor="#666"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>
        
        <!-- New Game Button -->
        <Button Text="Start New Game" 
                Clicked="OnStartNewGameButtonClicked"
                BackgroundColor="#193829"
                TextColor="White"
                FontSize="18"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="50"
                Margin="0,20,0,0"/>
        
    </VerticalStackLayout>
</ContentPage>