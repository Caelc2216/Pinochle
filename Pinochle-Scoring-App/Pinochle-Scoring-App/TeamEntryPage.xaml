<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pinochle_Scoring_App.TeamEntryPage"
             Title="Team Entry"
             BackgroundColor="#F5F5F5">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Title -->
            <Label Text="Team Setup"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#193829"
                   Margin="0,10,0,10"/>

            <Label Text="Enter Team/Player Names:"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="#666"/>

            <!-- Team 1 Card -->
            <Frame BackgroundColor="White"
                   CornerRadius="10"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Team 1"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#193829"
                           HorizontalOptions="Center"/>
                    
                    <Entry Text="{Binding Team1Name}" 
                           Placeholder="Enter Team 1 Name"
                           FontSize="16"
                           HorizontalOptions="Fill"/>
                    
                    <Button Text="Set Name"
                            Clicked="SetTeam1Name"
                            BackgroundColor="#193829"
                            TextColor="White"
                            FontSize="16"
                            CornerRadius="8"
                            HeightRequest="45"/>
                    
                    <Label Text="{Binding DisplayedTeam1Name, StringFormat='Team 1: {0}'}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#28a745"
                           IsVisible="{Binding DisplayedTeam1Name, Converter={StaticResource IsStringNotEmptyConverter}}"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Team 2 Card -->
            <Frame BackgroundColor="White"
                   CornerRadius="10"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Team 2"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#193829"
                           HorizontalOptions="Center"/>
                    
                    <Entry Text="{Binding Team2Name}"
                           Placeholder="Enter Team 2 Name"
                           FontSize="16"
                           HorizontalOptions="Fill"/>
                    
                    <Button Text="Set Name"
                            Clicked="SetTeam2Name"
                            BackgroundColor="#193829"
                            TextColor="White"
                            FontSize="16"
                            CornerRadius="8"
                            HeightRequest="45"/>
                    
                    <Label Text="{Binding DisplayedTeam2Name, StringFormat='Team 2: {0}'}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#28a745"
                           IsVisible="{Binding DisplayedTeam2Name, Converter={StaticResource IsStringNotEmptyConverter}}"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Continue Button -->
            <Button Text="Continue to Scoring"
                    Clicked="OnStartScoring"
                    BackgroundColor="#193829"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"
                    Margin="0,10,0,20"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>